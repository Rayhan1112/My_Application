<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:elevation="@dimen/_10sdp"
            app:cardBackgroundColor="#f40000"
            app:cardCornerRadius="@dimen/_130sdp">

            <ImageView
                android:layout_width="@dimen/_27sdp"
                android:layout_height="@dimen/_27sdp"
                app:tint="@android:color/white"
                android:layout_gravity="center"
                android:src="@drawable/baseline_person_24"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nameofUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Anonymous"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imagetodisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/placeholder"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/petName"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:textSize="@dimen/_15sdp"
        android:text="Pet Name"/>
    <TextView
        android:id="@+id/breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:text="Pet Breed"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/color"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:text="Pet Color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:text="Pet Weight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.like.LikeButton
                android:id="@+id/likebutton"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
               app:icon_type="heart"
                app:like_drawable="@drawable/heart1"
                app:unlike_drawable="@drawable/heart" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="10dp"
                android:src="@drawable/chat"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_margin="10dp"
                android:src="@drawable/send"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:background="@color/black"/>
    </LinearLayout>




</androidx.cardview.widget.CardView>